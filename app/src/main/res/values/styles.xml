<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Credits">
        <item name="android:text">@string/default_credits</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/spacing_medium</item>
        <item name="android:layout_marginEnd">@dimen/spacing_medium</item>
        <item name="android:layout_marginBottom">@dimen/spacing_medium</item>
    </style>

    <style name="GridItem">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>
